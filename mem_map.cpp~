uint8 *mem[8];

create_mem_map(mem);
	
*mem[0] = 0;
*mem[1] = 0;
*mem[2] = 0;
*mem[3] = 0;

void create_mem_map(uint8 *m[]);


int main(){

	
	

	int jk = 123;

	//(0,jk);
	printf("READ FROM MEM: %d \n",read(0));

	print_slot();


}

void print_slot(){	

	for(int i=0; i<8; i++){
		cout << i << " - " << *mem[i] << "\n";
	}
	//*mem[7] = 985;
	for(int i=0; i<8; i++){
		cout << i << " - " << *mem[i] << "\n";
	}
	cout << "1001 % 800 = " << 0x1001%0x800 << "\n";
}


void create_mem_map(uint8 *m[]){
	uint8 *k;
	k = new uint8[4];
	
	int j=0;
	for (int i=0; i<4; i++){
		m[i] = new uint8;
	}
	for (int i=4; i<8; i++){
		m[i] = m[j];
		j++;
	}

}

int read(int addr){
	return *mem[addr];

}
int write(int addr, int value){
	*mem[addr] = value;

}

